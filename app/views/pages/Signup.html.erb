<h1>Sigh up</h1>
<p>To follow my exciting news, mainly eating habits, feel free to sign up!</p>

<%= form_for(@user) do |f| %>

	
	<div class="field">
		<%= f.label :name %> <br />
		<%= f.text_field :name %>
	</div>
	
	<div class="field">
		<%= f.label :email %> <br />
		<%= f.text_field :email %>
	</div>
	
	<div class="field">
		<%= f.label :password %> <br />
		<%= f.password_field :password %>
	</div>
	
	<div class="field">
		<%= f.label :password_confirmation %> <br />
		<%= f.password_field :password_confirmation %>
	</div>
	
	<div class="actions">
		<%= f.submit "Sign up" %>
	</div>

<% end %>

